{
	"name": "Todo GTD",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"test:e2e:mobile": "playwright test --project=mobile-chrome",
		"test:e2e:quick": "playwright test --ui --project=mobile-chrome",
		"test:e2e:debug": "playwright test --project=mobile-chrome --debug",
		"test:e2e:ci": "playwright test 'TodoApp - Basic Functionality'",
		"db:push": "drizzle-kit push",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^3.2.7",
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.33.0",
		"@playwright/test": "^1.54.2",
		"@storybook/addon-essentials": "^8.6.14",
		"@storybook/addon-svelte-csf": "^5.0.7",
		"@storybook/blocks": "^8.6.14",
		"@storybook/experimental-addon-test": "^8.6.14",
		"@storybook/svelte": "^8.6.14",
		"@storybook/sveltekit": "^8.6.14",
		"@storybook/test": "^8.6.14",
		"@sveltejs/adapter-auto": "^6.0.2",
		"@sveltejs/kit": "^2.27.3",
		"@sveltejs/vite-plugin-svelte": "^5.1.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.11",
		"@testing-library/jest-dom": "^6.6.4",
		"@testing-library/svelte": "^5.2.8",
		"@types/node": "^22.17.1",
		"@vitest/browser": "^3.2.4",
		"@vitest/coverage-v8": "^3.2.4",
		"drizzle-kit": "^0.30.6",
		"eslint": "^9.33.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.11.0",
		"globals": "^16.3.0",
		"jsdom": "^26.1.0",
		"playwright": "^1.54.2",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"storybook": "^8.6.14",
		"svelte": "^5.38.0",
		"svelte-check": "^4.3.1",
		"tailwindcss": "^4.1.11",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.0",
		"vite": "^6.3.5",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@anthropic-ai/sdk": "^0.30.1",
		"@libsql/client": "^0.14.0",
		"@melt-ui/svelte": "^0.86.6",
		"@node-rs/argon2": "^2.0.2",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"drizzle-orm": "^0.40.1",
		"lucide-svelte": "^0.539.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
